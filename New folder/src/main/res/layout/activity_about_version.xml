<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00032B"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00032B"
            android:orientation="vertical"
            android:weightSum="1">

        <TextView android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="serif-monospace"
    android:lineSpacingExtra="8sp"
            android:text="
 is an All India MCA(Master of Computer Applications) meet conducted by the
 Department of CA (Computer Application),
 NIT(National Institute of Technology),Tiruchchirapalli

In the year 1991 a wonderful , thrilling and the most exciting event which motivated several to establish their skills by conducting various events and brought up several to explore their skills by participating in those events.Several Technical and Non technical events are conducted."
    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
    android:textColor="#ffffff"
    android:textSize="20dp"
    android:visibility="visible"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_below="@+id/imageView2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@drawable/new_version_1"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
        </ScrollView>
    </LinearLayout>